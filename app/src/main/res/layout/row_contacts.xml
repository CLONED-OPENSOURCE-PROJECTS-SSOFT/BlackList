<?xml version="1.0" encoding="utf-8"?>
<com.kaliturin.blacklist.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/selector_control"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="22sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/contact_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:textColor="@color/colorText2"/>
        </LinearLayout>

        <!--CheckBox
            android:id="@+id/contact_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.CheckBox"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:clickable="false" /-->

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/contact_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_checkbox"
            app:buttonTint="@drawable/selector_checkbox_tint"
            android:layout_gravity="center"
            android:clickable="false"
            android:padding="2dp"/>

    </LinearLayout>

</com.kaliturin.blacklist.CheckableLinearLayout>